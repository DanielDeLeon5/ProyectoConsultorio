<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
                <a href="@Url.Action("Index", "Consultas")">
                    <img alt="Brand" src="https://sifco.org/wp-content/themes/sifco/assets/img/logo_blanco1.svg" class="navbar-brand">
                </a>

                @Html.ActionLink("Centro médico", "Index", "Consultas", new { area = "" }, new { @class = "navbar-brand navbar-tex" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="">@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-tex" })</li>
                    <li>@Html.ActionLink("Diagnosticos", "Index", "Diagnosticoes", new { area = "" }, new { @class = "navbar-tex" })</li>
                    <li>@Html.ActionLink("Medicos", "Index", "Medicos", new { area = "" }, new { @class = "navbar-tex" })</li>
                    <li>@Html.ActionLink("Pacientes", "Index", "Pacientes", new { area = "" }, new { @class = "navbar-tex" })</li>
                    <li>@Html.ActionLink("Especialidades", "Index", "Especialidads", new { area = "" }, new { @class = "navbar-tex" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/app.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
